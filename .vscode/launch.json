    "version": "0.2.0",
    "configurations": [
        {
            "name": "Get configuration",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": ["config"]
        },
        {
            "name": "Get token",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": ["token"]
        },
        {
            "name": "Get token and save it to the file",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": ["token", "--to=./token"]
        },
        {
            "name": "Refresh token",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": ["refresh-token", "--token=abc"]
        },
        {
            "name": "Refresh token stored in file",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": ["refresh-token", "--from=./token"]
        },
        {
            "name": "Decode id token received from execution of token parent command",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": ["token", "jwt", "--decode-id-token"]
        },
        {
            "name": "Decode id token (from token stored in file)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": ["jwt", "--decode-id-token", "--from=./token"]
        },
        {
            "name": "Decode id token (from token received as command argument)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": ["jwt", "--decode-id-token", "--token=abc"]
        },
        {
            "name": "Fetch user info",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": ["user-info", "--from=./token"]
        },
    ]
}